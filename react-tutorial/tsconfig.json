{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "es6",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/*.ts",
    "src/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "public",
    "lib"
  ]
}
